---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Agenda una cita",
    path: "/contacto",
    isMain: true,
  },
  {
    title: "Quienes somos",
    path: "/quienes-somos",
    isMain: false,
  },
  {
    title: "Qu√© es neurofeedback",
    path: "/que-es-neurofeedback",
    isMain: false,
  },
  {
    title: "Preguntas frecuentes",
    path: "/preguntas-frecuentes",
    isMain: false,
  },
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg w-[50px]">
          <img src="/favicon.svg" alt="BrainCare Logo" />
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class={`flex lg:px-3 py-2  transition-all duration-150 ${
                        item.isMain
                          ? "bg-emerald-300 text-emerald-800 hover:text-emerald-600 hover:bg-emerald-200 rounded-xl"
                          : "text-gray-600 hover:text-gray-900"
                      } ${
                        Astro.url.pathname === item.path
                          ? "font-bold text-emerald-800"
                          : ""
                      }`}>
                      {item.title}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
      </MenuItems>
    </Astronav>
  </header>
</Container>

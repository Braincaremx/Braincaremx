---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Contactform from "@components/contactform.astro";
---

<Layout title="Contact">
  <Sectionhead>
    <Fragment slot="title">Contacto</Fragment>
    <Fragment slot="desc">Estamos aquí para ayudar</Fragment>
  </Sectionhead>
  <Container>
    <div
      class="flex flex-col md:flex-row-reverse gap-10 mx-auto max-w-4xl mt-16">
      <div class="md:w-1/2 text-center flex justify-center flex-col">
        <h2 class="text-4xl important font-bold uppercase mb-4">
          Muchas gracias
        </h2>
        <p class="text-xl">Nos pondremos en contacto pronto</p>
      </div>
      <div class="md:w-1/2">
        <h2 class="font-medium text-2xl">BrainCare</h2>
        <p class="text-lg leading-relaxed mt-3">
          Te gustaría agendar una cita o saber más sobre nuestros servicios, no
          dudes en contactarnos.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2">
            <Icon class="flex-shrink-0 w-4 h-4" name="uil:map-marker" />

            <span
              >Querétaro, WTC Momentum, Torre Médica II, Paseo de la república,
              KM 13020, Juriquilla</span
            >
          </div><div class="flex items-center mt-2 space-x-2">
            <Icon class="flex-shrink-0 w-4 h-4" name="uil:envelope" /><div
              href="mailto:Braincaremx@gmail.com">
              Braincaremx@gmail.com
            </div>
          </div><div class="flex items-center mt-2 space-x-2">
            <Icon class="flex-shrink-0 w-4 h-4" name="uil:phone" /><div
              href="tel:+1 (987) 4587 899">
              44 21 26 38 35
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</Layout>
